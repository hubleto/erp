<div class="flex gap-2 flex-wrap w-[600px] m-auto card mt-12">
  <div class="card-header">
    <h1 class="app-main-title">{{ viewParams.sidebarGroup.title }}</h1>
  </div>
  <div class="card-body flex gap-2 flex-wrap">
    {% for app in viewParams.apps %}
      <a
        href="{{ config.projectUrl }}/{{ app.rootUrlSlug }}/"
        class="btn btn-square btn-large btn-transparent"
      >
        <span class="icon"><i class="{{ app.icon }}"></i></span>
        <span class="text">{{ app.name }}</span>
      </a>
    {% endfor %}
  </div>
</div>

