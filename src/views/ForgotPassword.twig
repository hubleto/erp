{% extends '@hubleto/layouts/Auth.twig' %}

{% block inputs %}
  <input
    type="email" name="login" placeholder="{{ translate("Email") }}"
    onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
  />
{% endblock %}

{% block button %}
  <button type="submit" class="btn btn-large mt-4">
    <span class="icon"><i class="fas fa-arrow-right"></i></span>
    <span class="text">{{ translate("Request password reset") }}</span>
  </button>
{% endblock %}