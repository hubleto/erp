<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel='shortcut icon' href='{{ config.url }}/assets/images/logo-hubleto.png'>
  <title>Hubleto</title>

  <script src='{{ config.accountUrl }}/adios/cache.js'></script>

  <link rel="stylesheet" type="text/css" href="{{ config.url }}/assets/css/fontawesome-6.6.css">
  <link rel="stylesheet" type="text/css" href="{{ config.url }}/assets/compiled/app.css">
</head>

<body>

  <div id="sign-in-screen">
    <div class="inner">
      <div class="logo">
        <img src="{{ config.url }}/assets/images/logo-hubleto-s-textom.png" style="height:5em;margin-bottom:1em;" />
      </div>
      <div class="form">
        <form class="content" id="login_form" action="" method="POST">
          <input type=hidden name="language" id="language" value="{{ config.language }}">
          <input type=hidden name="authUser" id="authUser" value="1">

          <input
            type="text" name="login" value="{{ login }}" placeholder="Your email" autofocus
            onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
          />

          <input
            type="password" name="password" placeholder="Password"
            onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
          />

          <div class="mt-2">
            <input type="checkbox" id="keep_logged_in" name="keep_logged_in" value="1" checked>
            <label for="keep_logged_in">Keep signed in</label>
          </div>

          <button type="submit" class="btn btn-large mt-4">
            <span class="icon"><i class="fas fa-arrow-right"></i></span>
            <span class="text">Sign in</span>
          </button>

        </form>
        {% if viewParams.login != "" %}
          <div class="small mt-8 text-red-400 text-center">
            Invalid email or password.
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</body>
</html>
